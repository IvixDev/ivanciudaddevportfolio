---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";
import { SEO } from "astro-seo";
import SpeedInsights from "@vercel/speed-insights/astro";
import type { InfoSeoProps } from "../types/types"

interface Props {
  infoSeo: InfoSeoProps;
}

const { infoSeo } = Astro.props;
const path = Astro.url.pathname;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:image"
      content="https://www.ivanciudad.com/fotoivan.webp"
    />
    <meta name="google-site-verification" content="rtqz__fHq7l_eMEEl-ULln50aHX17BLq7dSVgfVkLdU" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <SEO {...infoSeo} />
    <SpeedInsights />
    <ClientRouter />
  </head>
  <body
    class="flex flex-col bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]"
  >
    <Header />
    <div class="flex flex-col items-center w-full">
      <div
        class="flex
        justify-center
        max-w-screen-tablet
        px-4
        py-10
        tablet:px-8
        tablet:max-w-screen-laptop
        laptop:px-16
        desktop:max-w-screen-desktop
        bigDesktop:max-w-screen-bigDesktop
        w-full layout-container"
        >
        <slot />
      </div>
      <Footer />
    </div>
    <style is:global>
      @font-face {
        font-family: "Onest";
        src: url('/fonts/Onest.woff2') format('woff2');
        font-weight: normal;
        font-style: normal;
      }
      @font-face {
        font-family: "Source Code Pro";
        src: url('/fonts/SourceCodePro.woff2') format('woff2');
        font-weight: normal;
        font-style: normal;
      }
      :root {
        color-scheme: light dark;
      }
      html {
        font-family: "Onest", system-ui, sans-serif;
      }
      body {
        width: 100%;
        display: flex;
        align-items: center;
        background-color: #0f172a;
        color: white;
      }
      p {
        font-family: "Source Code Pro";
      }
      .layout-container {
        min-height: calc(100vh - (80px + 124px));
      }
      .scale-on-hover {
        transition: transform 0.3s ease-in-out;
      }
      .scale-on-hover:hover {
        transform: scale(1.1);
      }
      .scale-on-hover-big {
        transition: transform 0.3s ease-in-out;
      }
      .scale-on-hover-big:hover {
        transform: scale(1.3);
      }
        /* Custom scrollbar styles */
      ::-webkit-scrollbar {
        width: 12px;
      }
      ::-webkit-scrollbar-track {
        background: #0f172a;
      }
      ::-webkit-scrollbar-thumb {
        background-color: #31027c;
        border-radius: 10px;
        border: 3px solid #0f172a;
      }
      ::-webkit-scrollbar-thumb:hover {
        background-color: #310047;
      }
    </style>
  </body>
</html>
