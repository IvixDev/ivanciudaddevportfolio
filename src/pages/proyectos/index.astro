---
import { seoMapper } from "../../helpers/seo.helper";
import Layout from "../../layouts/Layout.astro";
import ProjectCard from "../../components/ProjectCard";
import {
  IconBrandNextjs,
  IconBrandTailwind,
  IconSeo,
  IconAccessible,
  IconBrandTypescript,
  IconBomb,
  IconArrowsMove,
  IconServer,
  IconPalette,
  IconSunMoon,
} from "@tabler/icons-react";

const title = "Iván Ciudad Espinar - Proyectos de Desarrollo Frontend";
const description =
  "Explora los proyectos de Iván Ciudad Espinar, desarrollador Frontend e Ingeniero Telemático. Descubre mis trabajos en desarrollo de software, aplicaciones web y más.";
const url = "https://www.ivanciudad.com/proyectos";
const image = "https://www.ivanciudad.com/programacion.webp";

const infoSeo = seoMapper(title, description, url, image);
---

<Layout infoSeo={infoSeo}>
  <section class="w-full max-w-4xl mx-auto py-12">
    <h1
      class="text-4xl tablet:text-5xl font-bold mb-8 bg-gradient-to-r from-white to-slate-400 bg-clip-text text-transparent pb-1"
    >
      Mis Proyectos
    </h1>

    <div class="grid grid-cols-1 tablet:grid-cols-2 gap-6">
      {/* Public Pages Card */}
      <ProjectCard
        title="Páginas Públicas"
        description="Mini proyecto construido con Nx, Next.js, Base-UI y Tailwind. Un laboratorio para experimentar con SEO, accesibilidad y diferentes estrategias de renderizado."
        href="/proyectos/public-pages"
        shouldReload={true}
        technologies={[
          { label: "TypeScript", icon: IconBrandTypescript, variant: "blue" },
          { label: "Nx", variant: "cyan" },
          { label: "Next.js", icon: IconBrandNextjs, variant: "cyan" },
          { label: "Base-UI", variant: "cyan" },
          { label: "Tailwind", icon: IconBrandTailwind, variant: "cyan" },
          { label: "SEO", icon: IconSeo, variant: "purple" },
          { label: "A11y", icon: IconAccessible, variant: "green" },
        ]}
      />
      {/* Minesweeper Card */}
      <ProjectCard
        title="Buscaminas"
        description="Versión moderna del clásico Buscaminas desarrollada en TypeScript. Un desafío técnico que implementa algoritmos de recursividad eficiente para la apertura de celdas en cascada."
        href="/proyectos/buscaminas"
        shouldReload={true}
        technologies={[
          { label: "TypeScript", icon: IconBrandTypescript, variant: "blue" },
          { label: "Recursividad", icon: IconBomb, variant: "purple" },
        ]}
      />
      {/* Pokemon Table Card */}
      <ProjectCard
        title="Tabla de Tipos Pokémon"
        description="Herramienta avanzada para consultar debilidades y fortalezas de tipos Pokémon. Enfocada en un Design System robusto con soporte nativo para modo claro/oscuro, uso de Drag & Drop interactivo y SSR para una carga de datos optimizada."
        href="/proyectos/tabla-pokemon"
        shouldReload={true}
        technologies={[
          { label: "Next.js", icon: IconBrandNextjs, variant: "cyan" },
          { label: "TypeScript", icon: IconBrandTypescript, variant: "blue" },
          { label: "MUI", variant: "blue" },
          { label: "Drag & Drop", icon: IconArrowsMove, variant: "purple" },
          { label: "SSR", icon: IconServer, variant: "green" },
          { label: "Design System", icon: IconPalette, variant: "purple" },
          { label: "Modo Dark/Light", icon: IconSunMoon, variant: "blue" },
        ]}
      />
    </div>
  </section>
</Layout>
