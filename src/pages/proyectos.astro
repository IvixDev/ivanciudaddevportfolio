---
import { seoMapper } from "../helpers/seo.helper";
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard";

import ScrollReveal from "../components/ScrollReveal";
import buscaminasImg from "../assets/proyectos-buscaminas.webp";
import pokemonTableImg from "../assets/proyectos-pokemon.webp";
import publicPagesImg from "../assets/proyectos-public-pages.webp";

const title = "Iván Ciudad Espinar - Proyectos de Desarrollo de Software";
const description =
  "Explora los proyectos de Iván Ciudad Espinar, Software Developer e Ingeniero Telemático. Descubre mis trabajos en desarrollo de software, aplicaciones web y más.";
const url = "https://www.ivanciudad.com/proyectos";
const image = "https://www.ivanciudad.com/proyectos-buscaminas.webp";

const infoSeo = seoMapper(title, description, url, image);
---

<Layout infoSeo={infoSeo}>
  <section class="w-full max-w-4xl mx-auto tablet:py-6 laptop:py-12">
    <h1
      class="text-4xl tablet:text-5xl font-bold mb-8 bg-gradient-to-r from-white to-slate-400 bg-clip-text text-center tablet:text-left text-transparent pb-1"
    >
      Mis Proyectos
    </h1>

    <div class="grid grid-cols-1 tablet:grid-cols-2 gap-6">
      {/* Minesweeper Card */}
      <ScrollReveal client:visible once={false} delay={0.1}>
        <ProjectCard
          client:visible
          title="Buscaminas"
          description="Versión moderna del clásico Buscaminas desarrollada en TypeScript. Un desafío técnico que implementa algoritmos de recursividad eficiente para la apertura de celdas en cascada."
          href="/proyectos/buscaminas"
          image={buscaminasImg.src}
          shouldReload={true}
          technologies={[
            {
              label: "TypeScript",
              icon: "IconBrandTypescript",
              variant: "blue",
            },
            { label: "Recursividad", icon: "IconBomb", variant: "purple" },
          ]}
        />
      </ScrollReveal>

      {/* Pokemon Table Card */}
      <ScrollReveal client:visible once={false} delay={0.2}>
        <ProjectCard
          client:visible
          title="Tabla de Tipos Pokémon"
          description="Consulta debilidades y fortalezas de tipos Pokémon con Drag & Drop y SSR usando la PokeAPI."
          href="/proyectos/tabla-pokemon"
          image={pokemonTableImg.src}
          shouldReload={true}
          technologies={[
            { label: "Next.js", icon: "IconBrandNextjs", variant: "cyan" },
            {
              label: "TypeScript",
              icon: "IconBrandTypescript",
              variant: "blue",
            },
            { label: "MUI", variant: "blue" },
            { label: "Drag & Drop", icon: "IconArrowsMove", variant: "purple" },
            { label: "SSR", icon: "IconServer", variant: "green" },
          ]}
        />
      </ScrollReveal>

      {/* Public Pages Card */}
      <ScrollReveal client:visible once={false} delay={0.3}>
        <ProjectCard
          client:visible
          title="Páginas Públicas"
          description="Laboratorio Next.js para explorar SSR, ISR, SSG y Cache Components con foco en SEO y accesibilidad."
          href="/proyectos/public-pages"
          image={publicPagesImg.src}
          shouldReload={true}
          technologies={[
            {
              label: "TypeScript",
              icon: "IconBrandTypescript",
              variant: "blue",
            },
            { label: "Nx", variant: "cyan" },
            { label: "Next.js", icon: "IconBrandNextjs", variant: "cyan" },
            { label: "SEO", icon: "IconSeo", variant: "purple" },
            { label: "A11y", icon: "IconAccessible", variant: "green" },
            { label: "SSR", icon: "IconServer", variant: "green" },
            { label: "ISR", icon: "IconRefresh", variant: "green" },
            { label: "SSG", icon: "IconStack2", variant: "green" },
            {
              label: "Cache Components",
              icon: "IconDatabase",
              variant: "purple",
            },
          ]}
        />
      </ScrollReveal>
    </div>
  </section>
</Layout>
