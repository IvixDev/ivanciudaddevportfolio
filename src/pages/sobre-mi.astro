---
import { seoMapper } from "../helpers/seo.helper";
import Layout from "../layouts/Layout.astro";
import ScrollReveal from "../components/ScrollReveal";
import { Image } from "astro:assets";
import ivanJapon from "../assets/sobre-mi.webp";

const title = "Iván Ciudad Espinar - Sobre mi";
const description =
  "Aquí encontrarás información sobre mi vida, mis gustos y mis hobbies. Descubre quién soy, de dónde vengo y mis pasiones por los videojuegos, las películas y las series.";
const url = "https://www.ivanciudad.com/sobre-mi";
const image = "https://www.ivanciudad.com/sobre-mi.webp";

const infoSeo = seoMapper(title, description, url, image);
---

<Layout infoSeo={infoSeo}>
  <ScrollReveal client:visible>
    <div class="flex flex-col gap-8">
      <Image
        src={ivanJapon}
        alt="Iván en Japón"
        class="w-full rounded-2xl shadow-2xl border border-white/10"
        widths={[400, 800, 1200]}
        sizes="(max-width: 768px) 100vw, 800px"
        quality={80}
        loading="eager"
        fetchpriority="high"
      />
      <p class="text-lg text-slate-300 leading-relaxed">
        te voy a contar mi vida
      </p>
    </div>
  </ScrollReveal>
</Layout>
