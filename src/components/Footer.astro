---
const currentYear = new Date().getFullYear();
import { Icon } from "astro-icon/components";
import { footerLinks, socialMediaLinks } from "../content/layout.consts";
---

<footer class="w-full border-t border-white/10 bg-slate-950/50 backdrop-blur-md mt-24">
  <div class="max-w-7xl mx-auto px-6 py-12 flex flex-col gap-12">
    
    <!-- Main Grid -->
    <div class="grid grid-cols-1 tablet:grid-cols-3 gap-10 laptop:gap-16">
      
      <!-- Col 1: Brand -->
      <div class="flex flex-col gap-5 items-center tablet:items-start text-center tablet:text-left">
        <a href="/" class="flex items-center gap-3 group">
             <div class="p-2 bg-white/5 rounded-full border border-white/10 group-hover:border-cyan-500/50 transition-colors">
                <Icon name="logo" class="size-6 text-cyan-400 group-hover:scale-110 transition-transform" />
             </div>
             <span class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-slate-300">Iván Ciudad Espinar</span>
        </a>
        <p class="text-slate-400 text-sm leading-relaxed max-w-xs">
          Desarrollador Frontend & Ingeniero Telemático.<br/>
          Transformando ideas en experiencias digitales fluidas y modernas.
        </p>
      </div>

      <!-- Col 2: Navigation -->
      <div class="flex flex-col gap-5 items-center tablet:items-start">
        <h3 class="text-slate-100 font-semibold tracking-wide">Mapa del sitio</h3>
        <nav class="flex flex-col gap-3">
          {
            footerLinks &&
            footerLinks.map((link) => (
              <a href={link.href} class="text-slate-400 hover:text-cyan-400 transition-colors text-sm flex items-center gap-2 group">
                <span class="w-1.5 h-1.5 rounded-full bg-slate-600 group-hover:bg-cyan-400 transition-colors"></span>
                {link.label}
              </a>
            ))
          }
        </nav>
      </div>

      <!-- Col 3: Social & Contact -->
      <div class="flex flex-col gap-5 items-center tablet:items-start">
         <h3 class="text-slate-100 font-semibold tracking-wide">Contacto</h3>
         <div class="flex gap-3">
            {
                socialMediaLinks &&
                socialMediaLinks.map((link) => (
                <a 
                    href={link.href} 
                    target="_blank" 
                    aria-label={link.ariaLabel}
                    class="p-2 bg-white/5 rounded-lg border border-white/10 text-slate-400 hover:text-white hover:bg-white/10 hover:border-cyan-500/30 transition-all duration-300"
                >
                    <Icon class="size-5" name={link.name} />
                </a>
                ))
            }
         </div>
      </div>
    
    </div>

    <!-- Divider & Copyright -->
    <div class="w-full border-t border-white/5 pt-8 flex flex-col tablet:flex-row justify-between items-center gap-4 text-xs text-slate-500">
       <p>&copy; 2024-{currentYear} Iván Ciudad Espinar.</p>
       <p class="flex items-center gap-1">
         Hecho con <span class="text-red-500">❤</span> y Astro
       </p>
    </div>

  </div>
</footer>

